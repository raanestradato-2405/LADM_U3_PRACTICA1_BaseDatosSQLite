<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity8"
    android:background="@drawable/fondoeditado">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONSULTAS AVANZADAS"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1.- Mostrar todos los Repartidores con linencia vencida "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="2.- Repartidores sin vehiculo asignado "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="3.- Autos que tengan 'N' cantidad de aÃ±os de uso. "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="4.- Vehiculo asignado a un repartidores especifico "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="5.- Conductor asignado a un Vehiculo espefico "
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="6.- Exportar todos los vehiculos a un archivo"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="7.- Exportar todos los repartidores a un archivo"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="8.- Exportar todos las asignaciones Repartidor -> Vehiculo"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:layout_marginBottom="25dp"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:hint="Ingresa Indice A Consultar "
            android:inputType="number"
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:id="@+id/txtIndiceConsulta"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONSULTAR"
            android:id="@+id/btnEjecutarConsultas"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Consola De Resultados"
            android:textSize="20dp"
            android:textColor="@color/rojo"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:id="@+id/txtResultadoConsulta"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EXPORTAR RESULTADOS"
            android:id="@+id/btnExportar"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/btnVerde"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ELIMINAR RESULTADOS"
            android:id="@+id/btnLimpiar"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/btnRojo"/>

    </LinearLayout>

</ScrollView>